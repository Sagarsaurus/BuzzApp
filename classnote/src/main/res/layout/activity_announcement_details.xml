<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.hellabreakfast.classnote.ui.AnnouncementDetailActivity">

    <TextView
        android:text="LCC-4811-JD2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/announcement_details_class"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:text="Announcement"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/announcement_details_title"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="By: Chris Ritter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/announcement_details_author"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="Posted: April 2 11:55 pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/announcement_details_date"
        android:layout_marginBottom="5dp" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/announcement_details_description"
        android:layout_marginBottom="5dp" />

</LinearLayout>
