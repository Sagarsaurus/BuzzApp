<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rumbleworks.classnote" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name="com.hellabreakfast.classnote.ui.ClassNoteApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="com.hellabreakfast.classnote.auth.AuthenticationService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>



        <activity
            android:name="com.hellabreakfast.classnote.ui.UpdateActivity"
            android:label="ClassNote" >
        </activity>
        <activity
            android:name="com.hellabreakfast.classnote.ui.CompassActivity"
            android:label="ClassNote" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hellabreakfast.classnote.ui.UpdatePasswordActivity"
            android:label="ClassNote"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name="com.hellabreakfast.classnote.ui.OverlayActivity"
            android:label="@string/title_activity_overlay"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name="com.hellabreakfast.classnote.ui.AnnouncementDetailActivity"
            android:label="@string/title_activity_announcement_details" >
        </activity>
        <activity
            android:name="com.hellabreakfast.classnote.ui.AssignmentDetailActivity"
            android:label="@string/title_activity_assignment_details" >
        </activity>
    </application>

</manifest>
